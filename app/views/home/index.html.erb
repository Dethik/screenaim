<div class="row">
  <div class="col-md-9">
    <ul id="conversations-list">
      <% @conversations.each do |conversation| %>
        <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
      <% end %>
    </ul>
  </div>

  <div class="col-md-3">
  <h2>Welcome <%= current_user.username %>!</h2>
    <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Buddy List</h3>
      </div>
      <div class="panel-body">
        <h4>Buddies (<%= User.where(online_status: true).length %>/<%= User.all.length %>)</h4>
        <ul>
          <% @users.each do |user| %>
            <% if user.online_status == true %>
              <li><%= link_to user.username, conversations_path(user_id: user), remote: true, method: :post %></li>
            <% end %>
          <% end %>
        </ul>
        <h4>Offline (<%= User.where(online_status: false).length %>/<%= User.all.length %>)</h4>
        <ul>
          <% @users.each do |user| %>
            <% if user.online_status == false %>
              <li><%= user.username %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>